FILES[] = 
  ingredient

TEST[] =
  test_plain_pot
  test_pointer_in_vector
  test_pointer_pot

INCLUDES += .
CXXFLAGS += -g

CXXProgram($(nth 0, $(TEST)), $(nth 0, $(TEST)) $(FILES))
CXXProgram($(nth 1, $(TEST)), $(nth 1, $(TEST)) $(FILES))
CXXProgram($(nth 2, $(TEST)), $(nth 2, $(TEST)) $(FILES))

.DEFAULT: $(TEST) 
  ./$(nth 0, $(TEST)) 
  ./$(nth 1, $(TEST)) 
  ./$(nth 2, $(TEST)) 

